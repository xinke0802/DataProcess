<Window x:Class="DataProcess.DataVisualization.DocList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Document List" Height="300" Width="400" 
        WindowStyle="None" Background="Transparent" AllowsTransparency="True">

    <Border BorderBrush="Black" BorderThickness="1">
        <Grid Background="Transparent" Margin="0 0 0 0">
            <ScrollViewer Name="_docListScrollViewer" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
                <StackPanel Name="DocTitlePanel" Orientation="Vertical" VerticalAlignment="Top">
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
